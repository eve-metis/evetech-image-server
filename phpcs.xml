<?xml version="1.0"?>
<ruleset name="EVE Image Server">
    <description>PSR-12 coding standard for eve-image-server.</description>
    <file>src</file>
    <file>tests</file>
    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <rule ref="PSR12"/>
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/.phpstan-cache/*</exclude-pattern>
</ruleset>
